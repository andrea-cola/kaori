<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/message_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_corners_chat_left"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        tools:text="TextView"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:singleLine="true"
        tools:text="18:54"
        android:textAlignment="textStart"
        android:textColor="@color/com_facebook_device_auth_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/message_content"
        app:layout_constraintStart_toEndOf="@+id/message_content" />

</android.support.constraint.ConstraintLayout>